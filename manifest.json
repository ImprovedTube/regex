{
    "manifest_version": 2,
    "name": "Regex Search",
    "version": "1.1",
    "icons": {
        "16": "assets/icons/16.png",
        "32": "assets/icons/32.png",
        "48": "assets/icons/48.png",
        "128": "assets/icons/128.png"
    },
    "browser_action": {
        "default_popup": "index.html"
    },
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*",
            "file://*/*"
        ],
        "js": [
            "content-scripts.js"
        ],
        "css": [
            "content-scripts.css"
        ]
    }],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "linux": "Ctrl+Shift+F",
                "mac": "Command+Shift+F",
                "windows": "Ctrl+Shift+F",
                "chromeos": "Ctrl+Shift+F"
            }
        }
    }
}
